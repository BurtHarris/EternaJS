{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start",
            "type": "npm",
            "script": "start",
            "problemMatcher": [
              {
                "source": "weback",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [{
                    "kind": "file",
                    "regexp": "(ERROR|WARNING) in (\\S*)$",
                    "severity": 1,
                    "file": 2
                    }, {
                    "regexp": "^(.*)$",
                    "message": 1,
                    }],
                "background": {
                  "activeOnStart": true,
                  "beginsPattern": "^Compilation  starting",
                  "endsPattern": "Entrypoint undefined ="
                }
              },
              {
                "source": "weback",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [{
                  "kind": "location",
                  "regexp": "(ERROR|WARNING) in (\\S*) (\\d+):(\\d+)-(\\d+)$",
                  "severity": 1,
                  "file": 2,
                  "line": 3,
                  "column": 4,
                  "endColumn": 5
                }, {
                  "regexp": "(.*)$",
                  "message": 1
                }],
              }
            ],
              "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        }
    ]
}